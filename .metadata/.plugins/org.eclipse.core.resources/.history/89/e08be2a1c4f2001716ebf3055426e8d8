
public class GeneratorVoeuxNoel {
	public static String VoeuxFemme (int sexe, String prenom){
		String voeux = null;
		if(sexe == 2){
			voeux = "Ma chère " + prenom;
			voeux = voeux + "\n Je te souhaite une excellente année 2018 !";
		} else if(sexe==1){
			voeux = "Mon chèr " + prenom;
			voeux = voeux + "\n Je te souhaite une excellente année 2018 !";
		} else { 
			voeux = "Qui es-tu, " + prenom + "?" ;
			voeux = voeux + "\n Quoi qu'il en soit. \n JE te souhaite une excellente année 2018 !";
		}
		
		return voeux;
	}
}
